<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:textColor="@color/WHITE_OPAQUE"
        android:textSize="18sp"
        />

    <EditText
        android:id="@+id/website_title"
        android:inputType="text"
        android:layout_below="@id/dialog_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:textColor="@color/WHITE_OPAQUE"
        android:hint="@string/website_title"
        />
    
    <EditText
        android:id="@+id/website_url"
        android:inputType="textUri"
    	android:layout_below="@id/website_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:textColor="@color/WHITE_OPAQUE"
        android:hint="@string/website_url"
        />
    
    <EditText
        android:id="@+id/num_images"
        android:inputType="number"
    	android:layout_below="@id/website_url"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:textColor="@color/WHITE_OPAQUE"
        android:hint="@string/num_images"
        />

</RelativeLayout>
