<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <ImageView
        android:id="@+id/floating_button"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/add_title_text"
        android:background="@drawable/floating_button_circle"
        android:contentDescription="@string/floating_add_button_content_description"
        />

    <ImageView
        android:id="@+id/floating_button_icon"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignBottom="@+id/floating_button"
        android:layout_alignEnd="@+id/floating_button"
        android:layout_alignLeft="@+id/floating_button"
        android:layout_alignRight="@+id/floating_button"
        android:layout_alignStart="@+id/floating_button"
        android:layout_alignTop="@+id/floating_button"
        android:padding="16dp"
        android:src="@drawable/ic_add_white_24dp"
        />

    <TextView
        android:id="@+id/add_title_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/add_tutorial_text"
        android:layout_marginTop="8dp"
        android:layout_marginStart="@dimen/side_margin"
        android:layout_marginLeft="@dimen/side_margin"
        android:layout_marginEnd="@dimen/side_margin"
        android:layout_marginRight="@dimen/side_margin"
        android:layout_marginBottom="8dp"
        android:textSize="24sp"
        />

    <TextView
        android:id="@+id/add_tutorial_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/source_card"
        android:maxHeight="240dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="@dimen/side_margin"
        android:layout_marginLeft="@dimen/side_margin"
        android:layout_marginEnd="@dimen/side_margin"
        android:layout_marginRight="@dimen/side_margin"
        android:layout_marginBottom="24dp"
        android:textSize="16sp"
        />

    <android.support.v7.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/source_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/LIGHT_THEME_DIALOG"
        app:cardCornerRadius="8dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_marginEnd="48dp"
        android:layout_marginStart="0px"
        android:layout_marginLeft="0px"
        android:layout_marginRight="48dp"
        android:layout_marginTop="0px"
        android:layout_marginBottom="8dp"
        android:layout_above="@+id/button_title_text"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="bottom|end"
            android:layout_gravity="bottom|end"
            >

            <ImageView
                android:id="@+id/source_delete_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/button"
                android:paddingBottom="12dp"
                android:paddingEnd="12dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="12dp"
                />

            <ImageView
                android:id="@+id/source_view_image_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/button"
                android:paddingBottom="12dp"
                android:paddingEnd="12dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="12dp"
                />

            <ImageView
                android:id="@+id/source_edit_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/button"
                android:paddingBottom="12dp"
                android:paddingEnd="12dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="12dp"
                />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/button_title_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_tutorial_text"
        android:layout_marginTop="8dp"
        android:layout_marginStart="@dimen/side_margin"
        android:layout_marginLeft="@dimen/side_margin"
        android:layout_marginEnd="@dimen/side_margin"
        android:layout_marginRight="@dimen/side_margin"
        android:layout_marginBottom="8dp"
        android:textSize="24sp"
        />

    <TextView
        android:id="@+id/button_tutorial_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="240dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="8dp"
        android:layout_marginStart="@dimen/side_margin"
        android:layout_marginLeft="@dimen/side_margin"
        android:layout_marginEnd="@dimen/side_margin"
        android:layout_marginRight="@dimen/side_margin"
        android:layout_marginBottom="8dp"
        android:textSize="16sp"
        />

</RelativeLayout>