<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fadeScrollbars="false">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <ImageView
                    android:id="@+id/floating_button"
                    android:layout_width="88dp"
                    android:layout_height="88dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/floating_button_circle"
                    android:contentDescription="@string/floating_add_button_content_description"
                    />

                <ImageView
                    android:id="@+id/floating_button_icon"
                    android:layout_width="88dp"
                    android:layout_height="88dp"
                    android:layout_alignBottom="@+id/floating_button"
                    android:layout_alignEnd="@+id/floating_button"
                    android:layout_alignLeft="@+id/floating_button"
                    android:layout_alignRight="@+id/floating_button"
                    android:layout_alignStart="@+id/floating_button"
                    android:layout_alignTop="@+id/floating_button"
                    android:padding="30dp"
                    android:src="@drawable/ic_add_white_24dp"
                    />

            </RelativeLayout>

            <TextView
                android:id="@+id/add_title_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginStart="@dimen/side_margin"
                android:layout_marginLeft="@dimen/side_margin"
                android:layout_marginEnd="@dimen/side_margin"
                android:layout_marginRight="@dimen/side_margin"
                android:layout_marginBottom="8dp"
                android:textSize="24sp"
                />

            <TextView
                android:id="@+id/add_tutorial_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxHeight="240dp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="@dimen/side_margin"
                android:layout_marginLeft="@dimen/side_margin"
                android:layout_marginEnd="@dimen/side_margin"
                android:layout_marginRight="@dimen/side_margin"
                android:layout_marginBottom="24dp"
                android:textSize="16sp"
                />

            </LinearLayout>

    </ScrollView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fadeScrollbars="false">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/source_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/DARK_THEME_DIALOG"
                app:cardCornerRadius="8dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_marginEnd="48dp"
                android:layout_marginStart="0px"
                android:layout_marginLeft="0px"
                android:layout_marginRight="48dp"
                android:layout_marginTop="0px"
                android:layout_marginBottom="8dp"
                >

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar_actions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/button_title_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginStart="@dimen/side_margin"
                android:layout_marginLeft="@dimen/side_margin"
                android:layout_marginEnd="@dimen/side_margin"
                android:layout_marginRight="@dimen/side_margin"
                android:layout_marginBottom="8dp"
                android:textSize="24sp"
                />

            <TextView
                android:id="@+id/button_tutorial_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxHeight="240dp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="@dimen/side_margin"
                android:layout_marginLeft="@dimen/side_margin"
                android:layout_marginEnd="@dimen/side_margin"
                android:layout_marginRight="@dimen/side_margin"
                android:layout_marginBottom="8dp"
                android:textSize="16sp"
                />

            </LinearLayout>

    </ScrollView>

</LinearLayout>