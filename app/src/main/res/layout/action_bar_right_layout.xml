<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    >

    <ImageView
        android:id="@+id/sort_sources"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/download_wallpaper"
        android:layout_toRightOf="@+id/download_wallpaper"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_action_storage"
        android:visibility="gone"
        android:contentDescription="@string/sort_sources_content_description"
        />

    <ImageView
        android:id="@+id/download_wallpaper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/cycle_wallpaper"
        android:layout_toRightOf="@+id/cycle_wallpaper"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_action_download"
        android:visibility="gone"
        android:contentDescription="@string/download_wallpaper_content_description"
        />

    <ImageView
        android:id="@+id/cycle_wallpaper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_action_refresh"
        android:visibility="gone"
        android:contentDescription="@string/cycle_wallpaper_content_description"
        />

    <View
        android:id="@+id/download_target"
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        />

    <TextView
        android:id="@+id/action_bar_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toStartOf="@+id/drawer_indicator"
        android:layout_toLeftOf="@+id/drawer_indicator"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:gravity="center_vertical"
        android:text="@string/app_name"
        android:textAppearance="?android:attr/textAppearanceMedium"
        />

    <ImageView
        android:id="@+id/drawer_indicator"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:paddingStart="8dp"
        android:paddingLeft="8dp"
        android:paddingEnd="8dp"
        android:paddingRight="4dp"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        android:src="@drawable/drawer_menu"
        android:contentDescription="@string/drawer_indicator_content_description"
        />

</RelativeLayout>