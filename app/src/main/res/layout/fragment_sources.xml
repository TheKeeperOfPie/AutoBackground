<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/no_image_indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="@string/no_image_indicator"
        android:textSize="12sp"
        android:textColor="@color/ALERT_TEXT"
        android:gravity="center_vertical"
        />

    <ListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/set_button"
        android:layout_below="@+id/no_image_indicator"
        android:drawSelectorOnTop="false">
    </ListView>

    <Button
        android:id="@+id/set_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/DARK_GRAY_OPAQUE"
        android:textColor="@color/WHITE_OPAQUE"
        />

    <ImageButton
        android:id="@+id/floating_button"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:background="@drawable/floating_button"
        android:contentDescription="@string/floating_add_button_content_description"
        />

</RelativeLayout>