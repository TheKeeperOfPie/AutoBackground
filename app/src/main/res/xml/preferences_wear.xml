<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:key="title_wear_settings"
        android:title="@string/title_app_settings"
        >

        <cw.kop.autobackground.CustomSwitchPreference
            android:key="use_sync_wear_image"
            android:title="@string/use_sync_wear_image"
            android:summary="@string/use_sync_wear_image_description"
            android:defaultValue="false"
            />

        <Preference
            android:key="wear_time_type"
            android:title="@string/wear_time_type"
            android:summary="@string/wear_time_type_description"
            />

        <Preference
            android:key="wear_time_adjust"
            android:title="@string/wear_time_adjust"
            android:summary="@string/wear_time_adjust_description"
            />

    </PreferenceCategory>

</PreferenceScreen>