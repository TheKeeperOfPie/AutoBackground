<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >
    android:style="@style/AppTheme"
    
    
	<PreferenceCategory
        android:key="title_download_settings"
	    android:title="@string/title_download_settings"
	    >

        <EditTextPreference
            android:key="user_width"
            android:defaultValue="1000"
            android:title="@string/user_width"
            android:inputType="number"
            android:numeric="integer"
            android:summary="@string/user_width_description"
            />

        <EditTextPreference
            android:key="user_height"
            android:defaultValue="1000"
            android:title="@string/user_height"
            android:inputType="number"
            android:numeric="integer"
            android:summary="@string/user_height_description"
            />

	    <cw.kop.autobackground.CustomSwitchPreference
		    android:key="use_timer"
    		android:defaultValue="false"
		    android:title="@string/use_timer" 
    		android:dialogTitle="@string/use_timer"
		    android:summary="@string/use_timer_description"
    		/>
	    
        <cw.kop.autobackground.CustomSwitchPreference
		    android:key="use_wifi"
    		android:defaultValue="true"
		    android:title="@string/use_wifi"
		    android:summary="@string/use_wifi_description"
         	/>
        
        <cw.kop.autobackground.CustomSwitchPreference
		    android:key="use_data"
    		android:defaultValue="false"
		    android:title="@string/use_data"
		    android:summary="@string/use_data_description"
         	/>

        <cw.kop.autobackground.CustomSwitchPreference
            android:key="use_download_notification"
            android:defaultValue="true"
            android:title="@string/use_download_notification"
            android:summary="@string/use_download_notification_description"
            />

        <cw.kop.autobackground.CustomSwitchPreference
		    android:key="use_high_quality"
    		android:defaultValue="true"
		    android:title="@string/use_high_quality"
		    android:summary="@string/use_high_quality_description"
         	/>
        
        <cw.kop.autobackground.CustomSwitchPreference
		    android:key="force_download"
    		android:defaultValue="false"
		    android:title="@string/force_download"
		    android:summary="@string/force_download_description"
         	/>

        <cw.kop.autobackground.CustomSwitchPreference
            android:key="use_download_path"
            android:defaultValue="false"
            android:title="@string/use_download_path"
            android:summary="@string/use_download_path_description"
            />

        <cw.kop.autobackground.CustomSwitchPreference
		    android:key="keep_images"
    		android:defaultValue="false"
		    android:title="@string/keep_images"
		    android:summary="@string/keep_images_description"
         	/>

        <cw.kop.autobackground.CustomSwitchPreference
            android:key="delete_old"
            android:defaultValue="false"
            android:title="@string/delete_old_images"
            android:summary="@string/delete_old_images_description"
            />

        <cw.kop.autobackground.CustomSwitchPreference
            android:key="check_duplicates"
            android:defaultValue="true"
            android:title="@string/check_duplicates"
            android:summary="@string/check_duplicates_description"
            />

        <Preference
            android:key="delete_images"
            android:title="@string/delete_images"
            android:summary="@string/delete_images_description"
            />

        <EditTextPreference
            android:key="image_prefix_adv"
            android:defaultValue="AutoBackground"
            android:inputType="textWebEditText"
            android:digits="@string/letters_and_numbers"
            android:title="@string/image_prefix"
            android:summary="@string/image_prefix_description"
            />

        <cw.kop.autobackground.CustomSwitchPreference
            android:key="use_experimental_downloader_adv"
            android:defaultValue="false"
            android:title="@string/use_experimental_downloader"
            android:summary="@string/use_experimental_downloader_description"
            />
    </PreferenceCategory>
    
</PreferenceScreen>
