<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:key="title_app_settings"
        android:title="@string/title_app_settings"
        >

        <Preference
            android:key="show_tutorial_source"
            android:summary="@string/show_tutorial_source_description"
            android:title="@string/show_tutorial_source"
            />

        <cw.kop.autobackground.CustomSwitchPreference
            android:defaultValue="true"
            android:key="use_toast"
            android:summary="@string/use_toast_description"
            android:title="@string/use_toast"
            />

        <cw.kop.autobackground.CustomSwitchPreference
            android:defaultValue="false"
            android:key="force_multi_pane"
            android:summary="@string/force_multi_pane_description"
            android:title="@string/force_multi_pane"
            />

        <Preference
            android:key="change_theme"
            android:summary="@string/change_theme_description"
            android:title="@string/change_theme"
            />

        <cw.kop.autobackground.CustomSwitchPreference
            android:defaultValue="false"
            android:key="use_advanced"
            android:title="@string/use_advanced"
            android:summary="@string/use_advanced_description"
            />

        <Preference
            android:key="export_sources"
            android:title="@string/export_sources"
            android:summary="@string/export_sources_description"
            />

        <Preference
            android:key="import_sources"
            android:title="@string/import_sources"
            android:summary="@string/import_sources_description"
            />

        <cw.kop.autobackground.CustomSwitchPreference
            android:defaultValue="true"
            android:key="use_fabric"
            android:title="@string/use_fabric"
            android:summary="@string/use_fabric_description"
            />

        <Preference
            android:key="clear_pref"
            android:summary="@string/clear_pref_description"
            android:title="@string/clear_pref"
            />

    </PreferenceCategory>

</PreferenceScreen>
