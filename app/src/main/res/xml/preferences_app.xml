<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >
    
	<PreferenceCategory
        android:key="title_app_settings"
		android:title="@string/title_app_settings"
		>

        <cw.kop.autobackground.CustomSwitchPreference
            android:key="use_toast"
            android:defaultValue="true"
            android:title="@string/use_toast"
            android:summary="@string/use_toast_description"
            />

		<cw.kop.autobackground.CustomSwitchPreference
			android:key="force_multipane"
			android:defaultValue="false"
			android:title="@string/force_multipane" 
			android:summary="@string/force_multipane_description"
			/>

        <cw.kop.autobackground.CustomSwitchPreference
            android:key="use_right_drawer"
            android:defaultValue="false"
            android:title="@string/use_right_drawer"
            android:summary="@string/use_right_drawer_description"
            />
		
		<Preference
			android:key="change_theme"
			android:title="@string/change_theme"
			android:summary="@string/change_theme_description"
			/>

        <cw.kop.autobackground.CustomSwitchPreference
            android:key="use_advanced"
            android:defaultValue="false"
            android:title="@string/use_advanced"
            android:summary="@string/use_advanced_description"
            />

        <Preference
            android:key="clear_pref"
            android:title="@string/clear_pref"
            android:summary="@string/clear_pref_description"
            />

        <Preference
            android:key="show_tutorial_source"
            android:title="@string/show_tutorial_source"
            android:summary="@string/show_tutorial_source_description"
            />

	</PreferenceCategory>

</PreferenceScreen>
