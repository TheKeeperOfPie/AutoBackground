<resources>

    <!-- Application theme. -->
    <!-- All customizations that are NOT specific to a particular API-level can go here. -->

    <style name="AppLightTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
        <item name="colorPrimary">@color/BLUE_OPAQUE</item>
        <item name="colorPrimaryDark">@color/DARK_BLUE_OPAQUE</item>
        <item name="colorAccent">@color/ACCENT_OPAQUE</item>
        <item name="android:windowBackground">@color/LIGHT_THEME_BACKGROUND</item>
        <item name="android:textColor">@color/DARK_GRAY_OPAQUE</item>
        <item name="android:textColorSecondary">@color/DARK_GRAY_OPAQUE</item>
        <item name="android:textColorHint">@color/DARK_GRAY_OPAQUE</item>
        <item name="android:alertDialogTheme">@style/LightDialogTheme</item>
        <item name="android:editTextStyle">@style/LightEditText</item>
        <item name="android:popupMenuStyle">@style/LightPopup</item>
        <item name="android:seekBarStyle">@style/LightSeekBar</item>
        <!--<item name="android:listViewStyle">@style/LightListView</item>-->
        <item name="android:actionBarWidgetTheme">@style/LightEditText</item>
        <!--<item name="android:dropDownListViewStyle">@style/LightListView</item>-->
    </style>

    <style name="AppDarkTheme" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
        <item name="colorPrimary">@color/BLUE_OPAQUE</item>
        <item name="colorPrimaryDark">@color/DARK_BLUE_OPAQUE</item>
        <item name="colorAccent">@color/ACCENT_OPAQUE</item>
        <item name="android:windowBackground">@color/DARK_THEME_BACKGROUND</item>
        <item name="android:textColor">@color/LIGHT_GRAY_OPAQUE</item>
        <item name="android:textColorSecondary">@color/LIGHT_GRAY_OPAQUE</item>
        <item name="android:alertDialogTheme">@style/DarkDialogTheme</item>
        <item name="android:editTextStyle">@style/DarkEditText</item>
        <item name="android:popupMenuStyle">@style/DarkPopup</item>
        <item name="android:seekBarStyle">@style/DarkSeekBar</item>
        <item name="android:listViewStyle">@style/DarkListView</item>
        <item name="android:actionBarWidgetTheme">@style/DarkEditText</item>
        <item name="android:dropDownListViewStyle">@style/DarkListView</item>
    </style>

    <style name="LightSwitch" parent="@android:style/TextAppearance.Holo.Small">
        <item name="android:textColor">@color/BLUE_OPAQUE</item>
        <item name="android:textColorHint">@color/BLUE_OPAQUE</item>
        <item name="android:textColorHighlight">@color/BLUE_OPAQUE</item>
        <item name="android:textColorLink">@color/BLUE_OPAQUE</item>
    </style>

    <style name="DarkSwitch" parent="@android:style/TextAppearance.Holo.Small">
        <item name="android:textColor">@color/BLUE_OPAQUE</item>
    </style>

    <style name="LightPopup" parent="@android:style/Widget.Holo.Spinner">
        <item name="android:popupBackground">@color/DARK_THEME_TOOLBAR</item>
        <item name="android:textColor">@color/DARK_GRAY_OPAQUE</item>
    </style>

    <style name="DarkPopup" parent="@android:style/Widget.Holo.Spinner">
        <item name="android:popupBackground">@color/LIGHT_THEME_TOOLBAR</item>
        <item name="android:textColor">@color/LIGHT_GRAY_OPAQUE</item>
    </style>

    <style name="ListSeparator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/apptheme_textfield_activated_holo_light</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:textColor">@color/BLUE_OPAQUE</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="LightListView" parent="android:style/Widget.Holo.Light.ListView">
        <item name="android:textColor">@color/DARK_GRAY_OPAQUE</item>
        <item name="android:divider">@color/DARK_GRAY_TRANSPARENT</item>
        <item name="android:dividerHeight">1px</item>
    </style>

    <style name="DarkListView" parent="android:style/Widget.Holo.ListView">
        <item name="android:textColor">@color/LIGHT_GRAY_OPAQUE</item>
        <item name="android:divider">@color/LIGHT_GRAY_TRANSPARENT</item>
        <item name="android:dividerHeight">1px</item>
    </style>

    <style name="LightActionBar" parent="android:Widget.Holo.Light.ActionBar">
        <item name="android:height">56dp</item>
        <item name="android:background">@color/BLUE_OPAQUE</item>
        <item name="android:titleTextStyle">@style/LightTitleColor</item>
    </style>

    <style name="DarkActionBar" parent="android:Widget.Holo.Light.ActionBar">
        <item name="android:height">56dp</item>
        <item name="android:background">@color/BLUE_OPAQUE</item>
        <item name="android:titleTextStyle">@style/DarkTitleColor</item>
    </style>

    <style name="LightTitleColor" parent="android:TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:background">@color/TRANSPARENT_BACKGROUND</item>
        <item name="android:textColor">@color/DARK_GRAY_OPAQUE</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DarkTitleColor" parent="android:TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:background">@color/TRANSPARENT_BACKGROUND</item>
        <item name="android:textColor">@color/LIGHT_GRAY_OPAQUE</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LightEditText" parent="android:Widget.EditText">
        <item name="android:textColor">@color/DARK_GRAY_OPAQUE</item>
        <item name="android:background">@drawable/edit_text</item>
    </style>

    <style name="DarkEditText" parent="android:Widget.EditText">
        <item name="android:textColor">@color/LIGHT_GRAY_OPAQUE</item>
        <item name="android:background">@drawable/edit_text</item>
    </style>

    <style name="LightDialogTheme" parent="android:style/Theme.Holo.Light.Dialog">
        <item name="android:textColor">@color/DARK_GRAY_OPAQUE</item>
        <item name="android:shadowColor">@color/TRANSPARENT_BACKGROUND</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="DarkDialogTheme" parent="android:style/Theme.Holo.Dialog">
        <item name="android:textColor">@color/LIGHT_GRAY_OPAQUE</item>
        <item name="android:windowBackground">@drawable/dialog_full_holo_dark</item>
        <item name="android:shadowColor">@color/TRANSPARENT_BACKGROUND</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="LightSeekBar" parent="android:style/Widget.Holo.Light.SeekBar">
    </style>

    <style name="DarkSeekBar" parent="android:style/Widget.Holo.SeekBar">
    </style>

    <style name="TutorialTheme" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

</resources>
