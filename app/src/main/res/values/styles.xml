<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
        <item name="android:background">@color/COLOR_TRANSPARENT_BACKGROUND</item>
        <item name="android:windowBackground">@color/COLOR_TRANSPARENT_BACKGROUND</item>
    	<item name="android:listViewStyle">@style/MyListView</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.DeviceDefault.Wallpaper">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:background">@color/COLOR_TRANSPARENT_BACKGROUND</item>
        <item name="android:windowBackground">@color/COLOR_TRANSPARENT_BACKGROUND</item>
    	<item name="android:listViewStyle">@style/MyListView</item>
    </style>

    <style name="MyListView" parent="@android:style/Widget.ListView">
        <item name="android:background">@color/COLOR_TRANSPARENT_BACKGROUND</item>
	</style>
    
    
    
</resources>
