<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <!-- All customizations that are NOT specific to a particular API-level can go here. -->

    <style name="AppLightTheme" parent="@android:style/Theme.DeviceDefault.Wallpaper">
        <item name="android:windowBackground">@color/WHITE_OPAQUE</item>
        <item name="android:listViewStyle">@style/LightListView</item>
        <item name="android:editTextStyle">@style/LightEditText</item>
        <item name="android:titleTextStyle">@style/LightTitleColor</item>
        <item name="android:textColor">@color/BLACK_OPAQUE</item>
        <item name="android:textColorSecondary">@color/DARK_GRAY_OPAQUE</item>
        <item name="android:textColorHint">@color/DARK_GRAY_OPAQUE</item>
        <item name="android:textStyle">bold</item>
        <item name="android:actionBarStyle">@style/LightActionBar</item>
        <item name="android:listSeparatorTextViewStyle">@style/LightListSeparator</item>
        <item name="android:alertDialogTheme">@style/LightDialogTheme</item>
        <item name="android:popupMenuStyle">@style/LightPopup</item>
        <item name="android:seekBarStyle">@style/LightSeekBar</item>
        <item name="ic_action_download">@drawable/ic_action_download</item>
        <item name="ic_action_refresh">@drawable/ic_action_refresh</item>
        <item name="ic_action_storage">@drawable/ic_action_storage</item>
        <item name="floating_button">@drawable/floating_button</item>
    </style>

    <style name="AppDarkTheme" parent="@android:style/Theme.DeviceDefault.Wallpaper">
        <item name="android:windowBackground">@color/BLACK_OPAQUE</item>
        <item name="android:listViewStyle">@style/DarkListView</item>
        <item name="android:editTextStyle">@style/DarkEditText</item>
        <item name="android:titleTextStyle">@style/DarkTitleColor</item>
        <item name="android:textColor">@color/WHITE_OPAQUE</item>
        <item name="android:textColorSecondary">@color/LIGHT_GRAY_OPAQUE</item>
        <item name="android:textColorHint">@color/LIGHT_GRAY_OPAQUE</item>
        <item name="android:textStyle">bold</item>
        <item name="android:actionBarStyle">@style/DarkActionBar</item>
        <item name="android:listSeparatorTextViewStyle">@style/DarkListSeparator</item>>
        <item name="android:alertDialogTheme">@style/DarkDialogTheme</item>
        <item name="android:popupMenuStyle">@style/DarkPopup</item>
        <item name="ic_action_download">@drawable/ic_action_download_dark</item>
        <item name="ic_action_refresh">@drawable/ic_action_refresh_dark</item>
        <item name="ic_action_storage">@drawable/ic_action_storage_dark</item>
        <item name="floating_button">@drawable/floating_button_dark</item>
    </style>

    <style name="AppTransparentTheme" parent="@android:style/Theme.DeviceDefault.Wallpaper">
        <item name="android:windowBackground">@color/TRANSPARENT_BACKGROUND</item>
        <item name="android:listViewStyle">@style/TransparentListView</item>
        <item name="android:editTextStyle">@style/DarkEditText</item>
        <item name="android:titleTextStyle">@style/DarkTitleColor</item>
        <item name="android:textColor">@color/WHITE_OPAQUE</item>
        <item name="android:textColorSecondary">@color/LIGHT_GRAY_OPAQUE</item>
        <item name="android:textColorHint">@color/LIGHT_GRAY_OPAQUE</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">@color/BLACK_OPAQUE</item>
        <item name="android:shadowRadius">4</item>
        <item name="android:actionBarStyle">@style/TransparentActionBar</item>
        <item name="android:listSeparatorTextViewStyle">@style/DarkListSeparator</item>>
        <item name="android:alertDialogTheme">@style/DarkDialogTheme</item>
        <item name="android:popupMenuStyle">@style/DarkPopup</item>
        <item name="ic_action_download">@drawable/ic_action_download_dark</item>
        <item name="ic_action_refresh">@drawable/ic_action_refresh_dark</item>
        <item name="ic_action_storage">@drawable/ic_action_storage_dark</item>
        <item name="floating_button">@drawable/floating_button_dark</item>
    </style>

    <style name="LightPopup" parent="@android:style/Widget.Holo.Spinner">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel</item>
    </style>

    <style name="DarkPopup" parent="@android:style/Widget.Holo.Spinner">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel</item>
    </style>

    <style name="LightListSeparator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/BLUE_OPAQUE</item>
        <item name="android:paddingTop">8dp</item>

    </style>

    <style name="DarkListSeparator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/BLUE_OPAQUE</item>
        <item name="android:paddingTop">8dp</item>
    </style>

    <style name="ShowcaseStyle" parent="@style/AppTransparentTheme">
        <item name="android:background">@color/BLACK_TRANSPARENT</item>
        <item name="sv_backgroundColor">@color/BLACK_TRANSPARENT</item>
    </style>

    <style name="LightListView" parent="android:style/Widget.Holo.Light.ListView">
        <item name="android:textColor">@color/BLACK_OPAQUE</item>
        <item name="android:divider">@color/BLACK_OPAQUE</item>
	</style>

    <style name="DarkListView" parent="android:style/Widget.Holo.ListView">
        <item name="android:textColor">@color/WHITE_OPAQUE</item>
        <item name="android:divider">@color/WHITE_OPAQUE</item>
    </style>

    <style name="TransparentListView" parent="android:style/Widget.Holo.ListView">
        <item name="android:textColor">@color/WHITE_OPAQUE</item>
        <item name="android:divider">@color/WHITE_OPAQUE</item>
    </style>

    <style name="LightActionBar" parent="android:Widget.Holo.Light.ActionBar">
        <item name="android:height">56dp</item>
        <item name="android:background">@color/BLUE_OPAQUE</item>
        <item name="android:titleTextStyle">@style/LightTitleColor</item>
    </style>

    <style name="DarkActionBar" parent="android:Widget.Holo.Light.ActionBar">
        <item name="android:height">56dp</item>
        <item name="android:background">@color/BLUE_OPAQUE</item>
        <item name="android:titleTextStyle">@style/DarkTitleColor</item>
    </style>

    <style name="TransparentActionBar" parent="android:Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:height">56dp</item>
        <item name="android:background">@color/BLUE_OPAQUE</item>
        <item name="android:titleTextStyle">@style/DarkTitleColor</item>
    </style>

    <style name="LightTitleColor" parent="android:TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:background">@color/TRANSPARENT_BACKGROUND</item>
        <item name="android:textColor">@color/BLACK_OPAQUE</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LightEditText" parent="android:Widget.EditText">
        <item name="android:textColor">@color/BLACK_OPAQUE</item>
    </style>

    <style name="DarkTitleColor" parent="android:TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:background">@color/TRANSPARENT_BACKGROUND</item>
        <item name="android:textColor">@color/WHITE_OPAQUE</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DarkEditText" parent="android:Widget.EditText">
        <item name="android:textColor">@color/WHITE_OPAQUE</item>
    </style>

    <style name="LightDialogTheme" parent="android:style/Theme.Holo.Light.Dialog.NoActionBar">
        <item name="android:textColor">@color/BLACK_OPAQUE</item>
        <item name="android:windowBackground">@color/TRANSPARENT_BACKGROUND</item>
    </style>

    <style name="DarkDialogTheme" parent="android:style/Theme.Holo.Dialog.NoActionBar">
        <item name="android:textColor">@color/WHITE_OPAQUE</item>
        <item name="android:windowBackground">@color/TRANSPARENT_BACKGROUND</item>
    </style>

    <style name="LightSeekBar" parent="android:style/Widget.Holo.Light.SeekBar">
    </style>

    <style name="DarkSeekBar" parent="android:style/Widget.Holo.SeekBar">
    </style>

</resources>
