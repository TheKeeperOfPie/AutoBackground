<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    <style name="AppLightTheme" parent="@android:style/Theme.DeviceDefault.Wallpaper">
        <item name="android:background">@color/WHITE_OPAQUE</item>
        <item name="android:listViewStyle">@style/LightListView</item>
        <item name="android:titleTextStyle">@style/LightTitleColor</item>
        <item name="android:textColor">@color/BLACK_OPAQUE</item>
        <item name="android:textStyle">bold</item>
        <item name="android:actionBarStyle">@style/LightActionBar</item>
    </style>

    <style name="AppDarkTheme" parent="@android:style/Theme.DeviceDefault.Wallpaper">
        <item name="android:background">@color/BLACK_OPAQUE</item>
        <item name="android:listViewStyle">@style/DarkListView</item>
        <item name="android:titleTextStyle">@style/DarkTitleColor</item>
        <item name="android:textColor">@color/WHITE_OPAQUE</item>
        <item name="android:textStyle">bold</item>
        <item name="android:actionBarStyle">@style/DarkActionBar</item>
    </style>

    <style name="AppTransparentTheme" parent="@style/AppDarkTheme">
        <item name="android:background">@color/TRANSPARENT_BACKGROUND</item>
        <item name="android:windowBackground">@color/TRANSPARENT_BACKGROUND</item>
        <item name="android:shadowColor">@color/BLACK_OPAQUE</item>
        <item name="android:shadowRadius">6</item>
        <item name="android:actionBarStyle">@style/TransparentActionBar</item>
    </style>

    <style name="ShowcaseStyle" parent="@style/AppTransparentTheme">
        <item name="android:background">@color/BLACK_TRANSPARENT</item>
        <item name="sv_backgroundColor">@color/BLACK_TRANSPARENT</item>
    </style>

    <style name="LightListView" parent="@android:style/Widget.ListView">
        <item name="android:background">@color/TRANSPARENT_BACKGROUND</item>
        <item name="android:divider">@color/BLACK_OPAQUE</item>\
        <item name="android:textColorSecondary">@color/DARK_GRAY_OPAQUE</item>
	</style>

    <style name="DarkListView" parent="@android:style/Widget.ListView">
        <item name="android:background">@color/TRANSPARENT_BACKGROUND</item>
        <item name="android:divider">@color/WHITE_OPAQUE</item>\
        <item name="android:textColorSecondary">@color/LIGHT_GRAY_OPAQUE</item>
    </style>

    <style name="LightActionBar" parent="android:Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/WHITE_OPAQUE</item>
        <item name="android:titleTextStyle">@style/LightTitleColor</item>
    </style>

    <style name="DarkActionBar" parent="android:Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/BLACK_OPAQUE</item>
        <item name="android:titleTextStyle">@style/DarkTitleColor</item>
    </style>

    <style name="TransparentActionBar" parent="android:Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/TRANSPARENT_BACKGROUND</item>
        <item name="android:titleTextStyle">@style/DarkTitleColor</item>
    </style>

    <style name="LightTitleColor" parent="android:TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/BLACK_OPAQUE</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DarkTitleColor" parent="android:TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/WHITE_OPAQUE</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LightDialogTheme">
        <item name="android:background">@color/BLACK_OPAQUE</item>
        <item name="android:textColor">@color/BLACK_OPAQUE</item>
        <item name="android:textColorPrimary">@color/BLACK_OPAQUE</item>
        <item name="android:textColorSecondary">@color/BLACK_OPAQUE</item>
        <item name="android:textColorTertiary">@color/BLACK_OPAQUE</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:textAppearance">@style/LightTitleColor</item>
    </style>

    <style name="DarkDialogTheme">
        <item name="android:background">@color/BLACK_OPAQUE</item>
        <item name="android:textColor">@color/WHITE_OPAQUE</item>
        <item name="android:textColorPrimary">@color/WHITE_OPAQUE</item>
        <item name="android:textColorSecondary">@color/WHITE_OPAQUE</item>
        <item name="android:textColorTertiary">@color/WHITE_OPAQUE</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:textAppearance">@style/DarkTitleColor</item>
    </style>
    
</resources>
